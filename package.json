{
  "name": "comprehendo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "scripts": {
    "dev": "clear && next dev",
    "build": "next build",
    "start": "next start",
    "verify": "prettier --write . && next lint --fix --no-cache && npx tsc --noEmit",
    "check": "npm run verify && vitest run --coverage && npx playwright test --reporter=list",
    "nuke": "rm -rf node_modules package-lock.json .next && npm install",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx playwright test --reporter=list",
    "test:e2e:watch": "playwright test --watch"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@google/genai": "^0.9.0",
    "@heroicons/react": "^2.2.0",
    "better-sqlite3": "^11.9.1",
    "i18next": "^24.2.3",
    "i18next-resources-to-backend": "^1.2.1",
    "immer": "^10.1.1",
    "next": "15.2.4",
    "next-auth": "^4.24.11",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "^15.4.1",
    "tailwindcss": "^3.4.1",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.14",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.2",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^10.1.1",
    "jsdom": "^26.1.0",
    "node-mocks-http": "^1.16.2",
    "npm-check-updates": "^17.1.16",
    "playwright": "^1.51.1",
    "postcss": "^8.4.38",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.30.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "vitest-dom": "^0.1.1"
  },
  "overrides": {
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4"
  }
}
