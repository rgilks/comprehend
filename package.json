{
  "name": "comprehendo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && npm run sentry:sourcemaps",
    "preview-build": "NEXT_PREVIEW_BUILD=true next build",
    "start": "next start",
    "verify": "prettier --check . && next lint --no-cache",
    "check": "prettier --write . && next lint --fix && jest && npx playwright test",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:quick": "jest --bail --findRelatedTests --passWithNoTests",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org rob-gilks --project comprehendo ./.next",
    "nuke": "rm -rf node_modules package-lock.json .next .next-validation",
    "prepare": "husky && husky install",
    "test:e2e": "npx playwright test --reporter=list"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "@heroicons/react": "^2.2.0",
    "@sentry/nextjs": "^9.11.0",
    "better-sqlite3": "^11.9.1",
    "i18next": "^24.2.3",
    "i18next-resources-to-backend": "^1.2.1",
    "immer": "^10.1.1",
    "next": "15.2.4",
    "next-auth": "^4.24.11",
    "next-i18next": "^15.4.2",
    "next-pwa": "^5.6.0",
    "openai": "^4.90.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.4.1",
    "tailwindcss": "^3.4.1",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@sentry/cli": "^2.30.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "msw": "^2.7.3",
    "node-mocks-http": "^1.16.2",
    "npm-check-updates": "^17.1.16",
    "playwright": "^1.51.1",
    "postcss": "^8.4.38",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "npm run test:quick"
    ]
  }
}
